<md-content ng-controller="UpdateListReviewCtrl">
	    <h1 align="center">CityNews Reviews</h1>

	<md-table-container>
	  <table md-table md-progress="promise">
	    <thead md-head>
	      <tr md-row>
	      	<th md-column></th>
          <th md-column>{{ 'NAME' | translate }}</th>
	        <th md-column>{{ 'COMMENT' | translate }}</th>
          <th md-column>{{ 'RATING' | translate }}</th>
          <th md-column>{{ 'PLACE' | translate }}</th>
	        <th md-column>{{ 'STATUS' | translate }}</th>
	      </tr>
	    </thead>
	    <tbody md-body>
	      <tr md-row ng-repeat="updatelistreview in updatelistreviews">
	     <!--  	<td md-cell>
	      		<img class="img-thumb img-circle" ng-src="/images/placeholder.png"
              actual-src="{{ updatelistreview.user.get('photo').url() }}" />
	      	</td> -->
          <td md-cell>{{ updatelistreview.user.get('name') }}</td>
	        <td class="text-wrap" md-cell>
						{{ updatelistreview.comment }}
					</td>
	        <td md-cell>
						<star-rating ng-model="updatelistreview.rating" readonly="true">
						</star-rating>
					</td>
	        <td md-cell>{{ updatelistreview.updatelist.get('title') }}</td>
	        <td md-cell>
						<span class="label"
						  ng-class="{ 'green': updatelistreview.isInappropriate, 'red': !updatelistreview.isInappropriate }">
						  <span ng-if="!updatelistreview.isInappropriate">{{ 'INAPPROPRIATE' | translate }}</span>
							<span ng-if="updatelistreview.isInappropriate">{{ 'APPROPRIATE' | translate }}</span>
						</span>
					</td>
	        <td md-cell>
				<md-menu>
			      <md-button aria-label="Open menu" class="md-icon-button"
			        ng-click="openMenu($mdOpenMenu, $event)">
			        <ng-md-icon md-menu-origin icon="more_vert"
			          layout="row" layout-align="start center">
			        </ng-md-icon>
			      </md-button>
			      <md-menu-content width="3">

              <md-menu-item>
			          <md-button aria-label="Mark as appropriate"
                  ng-click="onUpdateIsInappropriate(updatelistreview, false)">
									{{ 'FLAG_AS_INAPPROPRIATE' | translate }}
			          </md-button>
			        </md-menu-item>

			        <md-menu-item>
			          <md-button aria-label="Mark as inappropriate"
                ng-click="onUpdateIsInappropriate(updatelistreview, true)">
								{{ 'FLAG_AS_APPROPRIATE' | translate }}
			          </md-button>
			        </md-menu-item>

							<md-divider></md-divider>

							<md-menu-item>
			          <md-button aria-label="Delete"
                ng-click="onDelete($event, updatelistreview)">
								{{ 'DELETE' | translate }}
			          </md-button>
			        </md-menu-item>

			      </md-menu-content>
			    </md-menu>
	        </td>
	      </tr>
	    </tbody>

	    
	  </table>
	</md-table-container>
	<md-table-pagination md-limit-options="rowOptions"
	  md-limit="query.limit"
	  md-page="query.page" md-total="{{query.total}}"
		md-on-paginate="onPaginationChange"
		md-label="{ rowsPerPage: '{{ 'ROWS_PER_PAGE' | translate }}', of: '{{ 'OF' | translate }}' }">
	</md-table-pagination>
</md-content>
