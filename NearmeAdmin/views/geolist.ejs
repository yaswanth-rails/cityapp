<md-content ng-controller="GeoFenceCtrl">
	    <h1 align="center">Geo List</h1>
	<md-table-container>
	  <table md-table md-progress="promise">
	    <thead md-head md-order="query.order" md-trigger="onOrderChange">
	      <tr md-row>

	        <th md-column>Title</th>
          <th md-column>Radius</th>
                 <th md-column>message</th>
	        <th md-column></th>
	      </tr>
	    </thead>
	    <tbody md-body>
	      <tr md-row ng-repeat="geolist in geolist">
	      	
     
 
	        <td md-cell>{{:: geolist.title }}</td>
	        <td md-cell>{{:: geolist.radius }}</td>

 
	        <td md-cell>{{:: geolist.message }}</td>
	        <td md-cell>
				<md-menu>
			      <md-button aria-label="Open menu" class="md-icon-button"
			        ng-click="openMenu($mdOpenMenu, $event)">
			        <ng-md-icon md-menu-origin icon="more_vert"
			          layout="row" layout-align="start center">
			        </ng-md-icon>
			      </md-button>
			      <md-menu-content width="3">

			        <md-menu-item>
			          <md-button aria-label="Edit geolist"
								  ng-click="onEditGeoList($event,geolist)">
			            Edit
			          </md-button>
			        </md-menu-item>

			        <md-menu-item>
			          <md-button aria-label="Delete geolist"
								  ng-click="onDestroyGeoList($event, geolist)">
			            Delete
			          </md-button>
			        </md-menu-item>

			      </md-menu-content>
			    </md-menu>
	        </td>
	      </tr>
	    </tbody>
	  </table>
	</md-table-container>
	<md-table-pagination md-options="rowOptions" md-limit="query.limit"
	  md-page="query.page" md-total="{{query.total}}"
    md-on-paginate="onPaginationChange">
	</md-table-pagination>
  <md-button class="md-fab md-primary md-fab-bottom-right"
    aria-label="New geolist" ng-click="onNewGeoList($event)">
    <ng-md-icon class="icon-add" icon="add"
      layout="column" layout-align="center center">
    </ng-md-icon>
  </md-button>
</md-content>
