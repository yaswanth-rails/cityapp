<md-content ng-controller="HomeServiceCtrl">
	    <h1 align="center">Home Service</h1>

 	<md-table-toolbar>
    <div layout="row">
	    <md-content flex-gt-md="40" flex="100" style="overflow: hidden">
	      <md-input-container class="md-block" flex-gt-xs>
    		  <input type="text" placeholder="{{ 'SEARCH' | translate }}" ng-model="query.filter"
    		    ng-model-options="{ debounce: 1000 }" ng-change="onSearch()">
  	    </md-input-container>
      </md-content>
    </div>
  </md-table-toolbar>
	<md-table-container>
	  <table md-table md-progress="promise">
	    <thead md-head md-order="query.order" md-trigger="onOrderChange">
	      <tr md-row>
	      	<th md-column></th>
          <th md-column>{{ 'ICON' | translate }}</th>
	        <th md-column>{{ 'TITLE' | translate }}</th>
          <th md-column md-order-by="order">{{ 'SORT' | translate }}</th>
	        <th md-column></th>
	      </tr>
	    </thead>
	    <tbody md-body>
	      <tr md-row ng-repeat="homeservice in homeservice">
	      	<td md-cell>
	      		<img class="img-thumb img-circle" ng-src="/images/placeholder.png"
              actual-src="{{ homeservice.imageThumb.url() }}"/>
	      	</td>
          <td md-cell>
	      		<img class="img-circle" width="32" height="32"
						  ng-src="/images/placeholder.png"
              actual-src="{{ homeservice.icon.url() }}" />
	      	</td>
	        <td md-cell>{{:: homeservice.title }}</td>
	        <td md-cell>{{:: homeservice.order }}</td>
	        <td md-cell>
				<md-menu>
			      <md-button aria-label="Open menu" class="md-icon-button"
			        ng-click="openMenu($mdOpenMenu, $event)">
			        <ng-md-icon md-menu-origin icon="more_vert"
			          layout="row" layout-align="start center">
			        </ng-md-icon>
			      </md-button>
			      <md-menu-content width="3">

			        <md-menu-item>
			          <md-button aria-label="Edit homeservice"
								  ng-click="onEditHomeService($event, homeservice)">
			            {{ 'EDIT' | translate }}
			          </md-button>
			        </md-menu-item>

			        <md-menu-item>
			          <md-button aria-label="Delete homeservice"
								  ng-click="onDestroyHomeService($event, homeservice)">
			            {{ 'DELETE' | translate }}
			          </md-button>
			        </md-menu-item>

			      </md-menu-content>
			    </md-menu>
	        </td>
	      </tr>
	    </tbody>
	  </table>
	</md-table-container>
	<md-table-pagination md-limit-options="rowOptions"
	  md-limit="query.limit"
	  md-page="query.page" md-total="{{query.total}}"
		md-on-paginate="onPaginationChange"
		md-label="{ rowsPerPage: '{{ 'ROWS_PER_PAGE' | translate }}', of: '{{ 'OF' | translate }}' }">
	</md-table-pagination>
  <md-button class="md-fab md-primary md-fab-bottom-right"
    aria-label="New homeservice" ng-click="onNewHomeService($event)">
    <ng-md-icon class="icon-add" icon="add"
      layout="column" layout-align="center center">
    </ng-md-icon>
  </md-button>
</md-content>
